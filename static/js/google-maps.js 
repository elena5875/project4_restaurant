// google-map.js

// This file contains JavaScript code related to the Google Map section

// Function to initialize the Google Map
function initMap() {
    // Set the coordinates for the restaurant location in Stockholm City
    var restaurantLocation = { lat: 59.3289, lng: 18.0649 };

    // Create a map centered at the restaurant location
    var map = new google.maps.Map(document.getElementById("map"), {
        zoom: 15,
        center: restaurantLocation,
    });

    // Create a marker at the restaurant location
    var marker = new google.maps.Marker({
        position: restaurantLocation,
        map: map,
        title: "The Fork Restaurant",
    });
}
